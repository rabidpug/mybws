  "version": "0.2.0",
  "configurations": [
    {
      "name": "Browser",
      "type": "chrome",
      "request": "launch",
      "userDataDir": true,
      "url": "http://localhost:9000",
      "webRoot": "${workspaceRoot}/src",
      "sourceMaps": true,
      "skipFiles": ["${workspaceRoot}/node_modules/**/*.js", "<node_internals>/**/*.js"],
      "preLaunchTask": "npm: dev"
    }
  ]
}
